%h1= @recipe.title
%p= @recipe.description

= link_to 'back', root_path, class: 'btn btn-default'
= link_to 'edit', edit_recipe_path(@recipe), class: 'btn btn-default'
= link_to 'delete', recipe_path(@recipe), method: :delete, data: {confirm: 'Are you sure you want to delete this recipe?'}, class: 'btn btn-default'
